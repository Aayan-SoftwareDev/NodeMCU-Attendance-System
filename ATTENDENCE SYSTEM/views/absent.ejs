<head>
    <style>
        .minimal-table {
            border-collapse: collapse;
            width: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .minimal-table th {
            text-align: left;
            padding: 12px;
            border-bottom: 2px solid #333;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .minimal-table td {
            padding: 12px;
            border-bottom: 1px solid #e0e0e0;
        }

        .minimal-table tbody tr:hover {
            background-color: #f9f9f9;
        }

        h1{
            text-align: center;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>

</head>
<h1 style="text-align: center;">Absent</h1>
<button style="padding: 5px; background-color: green; color: white; margin-bottom: 10px;" onclick="exportPdf()">export as pdf</button>

<table class="minimal-table" border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Section</th>
            <th>ID</th>
            <th>Fine</th>
        </tr>
    </thead>

    <tbody id="history-body">
        <% entries.forEach(entry => { %>
            <tr>
                <td><%= entry.name %></td>
                <td><%= entry.class %></td>
                <td><%= entry.section %></td>
                <td><%= entry.id %></td>
                <td>200</td>
            </tr>
        <% }) %>
    </tbody>
</table>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();

    socket.on("update-absent", (history) => {
        const tbody = document.getElementById("history-body");
        tbody.innerHTML = "";

        history.forEach(h => {
            tbody.innerHTML += `
                <tr>
                    <td>${h.name}</td>
                    <td>${h.class}</td>
                    <td>${h.section}</td>
                    <td>${h.id}</td>
                    <td>200</td>
                </tr>
            `;
        });
    });
    function exportPdf() {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();
    
    doc.autoTable({ 
        html: '.minimal-table'
    });

    doc.save('table.pdf');
}
</script>
